{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "xerweon™ GATEKEEPER",
  "version": "0.1.5",
  "identifier": "com.gatekeeper.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "xerweon™ GATEKEEPER",
        "fullscreen": false,
        "width": 1280,
        "height": 768,
        "minWidth": 200,
        "minHeight": 400,
        "decorations": false,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "dmg", "deb", "appimage", "rpm"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Cirranex Tech Pvt. Ltd.",
    "copyright": "Copyright © 2026",
    "category": "Utility",
    "shortDescription": "Staff Kiosk for xerweon",
    "longDescription": "Staff Kiosk where the staff have to check-in, inorder to access xerweon",
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/Xerweon/gatekeeper/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEFBNTM2Q0U3QTE2Q0IyRDcKUldUWHNteWg1MnhUcWwyVkJOMmphY1Fyc2dDSytEdVZpRUcxd012VjVSNjNFRVhORmZaTldPajcK",
      "windows": {
        "installMode": "passive"
      }
    }
  }  
}
